{
  "name": "aaron-services",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo para servicios backend de Aaron",
  "scripts": {
    "start:dev": "pnpm dev:backend",

    "dev:api-gateway": "pnpm --filter @aaron/api-gateway dev",
    "dev:auth-service": "pnpm --filter @aaron/auth-service dev",
    "dev:operations-service": "pnpm --filter @aaron/operations-service dev",
    "dev:tracking-service": "pnpm --filter @aaron/tracking-service dev",
    "build": "turbo run build",
    "build:backend": "turbo run build --filter=\"./backend/**\"",
    "build:frontend": "turbo run build --filter=\"./frontend/**\"",
    "dev": "bash scripts/dev.sh",
    "dev:backend": "turbo run dev --filter=\"./backend/**\"",
    "dev:frontend": "turbo run dev --filter=\"./frontend/**\"",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "changed": "turbo run build --filter=...[origin/main]",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset": "pnpm clean && pnpm install",
    "smoke:e2e": "bash scripts/smoke_e2e.sh"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.12.0",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios": "^1.13.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "prisma": "5.22.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.6.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.12"
  }
}
